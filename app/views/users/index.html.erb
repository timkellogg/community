<!-- Page for showing all users and adding roles to them -->
<p class="lead">Total Users: <%= @users.count %></p>
<table id="users-list" class="table table-striped condensed">
	<tr>
		<th>Username</th>
		<th>Role</th>
		<th>Post Points</th>
		<th>Comments Points</th>
		<th>Sign-in Count</th>

	</tr>
<% @users.each do |user| %> 
	<tr>
		<td><%= user.username %></td>
		<td><%= user.role %></td>
		<td><%= user.post_upvotes + user.post_downvotes %></td>
		<td><%= user.comment_upvotes + user.comment_downvotes %></td>
		<td><%= user.sign_in_count %></td>
	</tr>
<% end %>
</table>