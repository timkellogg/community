<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= will_paginate @posts %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.rank %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.link %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @posts %>
<%= link_to 'New Post', new_post_path %>
