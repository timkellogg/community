<p id="notice"><%= notice %></p>

<h1>Community</h1>

<%= will_paginate @posts %>

  <table id="posts-listing" class="table-striped">
    <% @posts.each_with_index do |post, index| %> 
      <tr class="individual-post" colspan="12">
        <td class="post-rank" colspan="2">
          <%= index + 1 %>
        </td>
        <td class="post-votes" colspan="2">
          <span class="post-votes-up"><%= post.upvotes %></span>
          <br >
          <span class="post-votes-down"><%= post.downvotes %></span>
        </td>

        <td class="post-details" colspan="8">
        <%= link_to post do %>
          <li class="post-title"><%= truncate post.title, length: 50 %></li>
          <li class="post-description"><%= post.description %></li>
        <% end %>
        <%= link_to user_path(post.user) do %>
          <li class="post-user">by <%= User.find(post.user).username %></li>
        <% end %>
        </td>
      </tr>
    <% end %>
  </table>


<br>
<%= will_paginate @posts %>

